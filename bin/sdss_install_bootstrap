#!/bin/bash
#
# $Id: sdss_install_bootstrap 2018-10-30 n.benjamin.murphy $
#
function usage() {
    local execName=$(basename $0)
    (
    echo "${execName} [-h] [-m MODULESHOME] [-r ROOT] [-t] [-U USER] [-v]"
    echo ""
    echo "Install sdss_install on a bare system."
    echo ""
    echo "    -h = Print this message and exit."
    echo "    -m = Look for the Modules install in MODULESHOME."
    echo "    -r = Set or override the product root for sdss_install"
    echo "    -t = Test mode.  Do not make any changes.  Implies -v."
    echo "    -v = Verbose mode. Print lots of extra information."
    ) >&2
}
#
# Get options
#
modules=''
root=''
test=''
verbose=''
while getopts hm:r:tU:v argname; do
    case ${argname} in
        h) usage; exit 0 ;;
        m) modules=${OPTARG} ;;
        r) root=${OPTARG} ;;
        t) test='-t' ;;
        v) verbose='-v' ;;
        *) usage; exit 1 ;;
    esac
done
shift $((OPTIND-1))
#
# Install
#
if [[ -z "${SDSS_INSTALL_PRODUCT_ROOT}" && -z "${NERSC_HOST}" ]]; then
    echo "sdss_install_bootstrap - INFO - Please set the SDSS_INSTALL_PRODUCT_ROOT environment variable to the directory where you want your SDSS-IV and SDSS-V products installed."
    exit 1
fi
if [[ -n "${modules}" ]]; then
    if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - MODULESHOME=${modules}"; fi
    export MODULESHOME=${modules}
fi
if [[ -n "${root}" ]]; then
    if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - root = \"-r ${root}\" "; fi
    root = "-r ${root}"
fi
if [[ -z "${MODULESHOME}" ]]; then
    echo "sdss_install_bootstrap - INFO - You do not appear to have Modules installed."
    exit 1
fi

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - git clone https://github.com/sdss/sdss_install.git sdss_install-master "; fi
git clone https://github.com/sdss/sdss_install.git sdss_install-master

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - removing directory .git/ "; fi
rm -rf $(pwd)/sdss_install-master/.git/

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - export SDSS_INSTALL_DIR=$(pwd)/sdss_install-master"; fi
export SDSS_INSTALL_DIR=$(pwd)/sdss_install-master

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - export PATH=${SDSS_INSTALL_DIR}/bin:${PATH}"; fi
export PATH=${SDSS_INSTALL_DIR}/bin:${PATH}

if [[ -z "${PYTHONPATH}" ]]; then
    if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - export PYTHONPATH=${SDSS_INSTALL_DIR}/python"; fi
    export PYTHONPATH=${SDSS_INSTALL_DIR}/python
else
    if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - DEBUG - export PYTHONPATH=${SDSS_INSTALL_DIR}/python:${PYTHONPATH}"; fi
    export PYTHONPATH=${SDSS_INSTALL_DIR}/python:${PYTHONPATH}
fi

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - INFO - mkdir -p $(pwd)/modulefiles/sdss_install/"  ; fi
mkdir -p $(pwd)/modulefiles/sdss_install/

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - INFO - cp $(pwd)/sdss_install/master/etc/sdss_install-module $(pwd)/modulefiles/sdss_install/master"  ; fi
cp $(pwd)/sdss_install/master/etc/sdss_install-module $(pwd)/modulefiles/sdss_install/master

if [[ -n "${verbose}" ]]; then echo "sdss_install_bootstrap - INFO - sdss_install -G --bootstrap --module-only ${root} ${test} ${verbose}" ; fi
${SDSS_INSTALL_DIR}/bin/sdss_install -G --bootstrap --module-only ${root} ${test} ${verbose}

/bin/rm -rf sdss_install-master
